<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinancialAnalysis"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="FinancialAnalysis.MainWindow"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        dx:ThemeManager.ThemeName="MetropolisLight"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <dxg:TreeListControl Grid.Row="0" ItemsSource="{Binding CostAccountCategories}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" Margin="3" MaxHeight="500" MaxWidth="1920">
            <dxg:TreeListControl.View>
                <dxg:TreeListView AllowPerPixelScrolling="True" ShowTotalSummary="True" KeyFieldName="CostAccountCategoryId" ParentFieldName="ParentCategoryId" BestFitMode="AllRows" AutoExpandAllNodes="True"/>
            </dxg:TreeListControl.View>
            <dxg:TreeListColumn Binding="{Binding CostAccountCategoryId, Mode=TwoWay}" Header="ID" Visible="false"/>
            <dxg:TreeListColumn Binding="{Binding Name, Mode=TwoWay}" Header="Konto" Visible="true" VisibleIndex="1"/>
            <dxg:TreeListColumn Binding="{Binding CostAccountType.Name}" Header="Art" ReadOnly="False" AllowEditing="True" VisibleIndex="2"/>
        </dxg:TreeListControl>

        <dxg:GridControl Grid.Row="1" ItemsSource="{Binding CostAccounts}" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="3" MaxHeight="500" MaxWidth="1920">
            <dxg:GridControl.View>
                <dxg:TableView AllowPerPixelScrolling="True" ShowTotalSummary="True" AllowEditing="False"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>

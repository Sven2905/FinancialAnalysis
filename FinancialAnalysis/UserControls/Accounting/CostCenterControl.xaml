<UserControl x:Class="FinancialAnalysis.UserControls.CostCenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:ViewModels="clr-namespace:FinancialAnalysis.Logic.ViewModels;assembly=FinancialAnalysis.Logic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:local="clr-namespace:FinancialAnalysis.UserControls"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
             dx:ThemeManager.Theme="Office2016WhiteSE"
             xmlns:accounting="clr-namespace:FinancialAnalysis.UserControls.Accounting"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1900">
    <UserControl.DataContext>
        <ViewModels:CostCenterViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="labelStyle" TargetType="{x:Type dxlc:LayoutItemLabel}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <Style x:Key="itemStyle" TargetType="{x:Type dxlc:LayoutItem}">
            <Setter Property="LabelPosition" Value="Top" />
            <Setter Property="LabelStyle" Value="{StaticResource labelStyle}" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <local:NullToIsEnabledConverter x:Key="NullConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <dxwui:PageAdornerControl Header="Kostenstellen" Grid.ColumnSpan="3" Foreground="#3f729b" FontFamily="Tahoma">
            <dxwui:PageAdornerControl.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{Binding}" />
                    </Grid>
                </DataTemplate>
            </dxwui:PageAdornerControl.HeaderTemplate>
        </dxwui:PageAdornerControl>

        <dx:DXTabControl Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,0,10">
            <dx:DXTabItem Header="Kostenstellen">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Content="Verfügbare Kostenstellen" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />
                    <Label Grid.Column="2" Content="Informationen" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />
                    <Label Grid.Column="4" Content="Kostenstellenverteilung" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />

                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="7*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="7*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dxlc:LayoutControl Grid.Row="0" Orientation="Vertical" ItemStyle="{StaticResource itemStyle}"
                                ItemSpace="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Stretch">
                                    <dxlc:LayoutGroup.Header>
                                        <TextBlock Text="Filter" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Filtertext" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutControl>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="12,0,12,0">
                                <ListView ItemsSource="{Binding CostCenters}" SelectedItem="{Binding SelectedCostCenter}"
                          x:Name="Users" BorderThickness="1" BorderBrush="DarkGray" FontSize="14">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="2" Padding="0 0 8 0">
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Margin="10,0,0,0" Text="{Binding Name}" Foreground="#000"
                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Margin="10,0,0,0" Text="{Binding CostCenterCategory.Name}"
                                                   Foreground="#9e9e9e" TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ListView>
                            </ScrollViewer>
                        </Grid>

                        <VirtualizingStackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <dx:SimpleButton Width="120" Height="30" Margin="0,0,5,0" Content="Neu"
                                 Foreground="#3F729B" Command="{Binding NewCostCenterCommand}" FontFamily="Tahoma" />
                            <dx:SimpleButton Width="120" Height="30" Margin="5,0,5,0" Content="Speichern" Foreground="#3F729B"
                                 Command="{Binding SaveCostCenterCommand}" FontFamily="Tahoma" />
                            <dx:SimpleButton Width="120" Height="30" Margin="5,0,0,0" Content="Löschen" Foreground="#3F729B"
                                 Command="{Binding DeleteCostCenterCommand}" FontFamily="Tahoma" />
                        </VirtualizingStackPanel>

                        <Grid Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <dxlc:LayoutControl Orientation="Vertical" ItemStyle="{StaticResource itemStyle}" ItemSpace="10"
                                    IsEnabled="{Binding SelectedCostCenter, Converter={StaticResource NullConverter}}">
                                <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Left" Width="500">
                                    <dxlc:LayoutGroup.Header>
                                        <TextBlock Text="Informationen" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Kostenstelle-ID" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding SelectedCostCenter.Identifier}" FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Name" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding SelectedCostCenter.Name}" FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Kategorie" FontFamily="Tahoma">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <dxe:ComboBoxEdit NullText="Bitte wählen" ValueMember="CostCenterCategoryId"
                                                      DisplayMember="Name" ItemsSource="{Binding CostCenterCategories}"
                                                      EditValue="{Binding SelectedCostCenter.RefCostCenterCategoryId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      FontFamily="Tahoma" />
                                                <dx:SimpleButton Grid.Column="1" Width="30" Margin="5,0,0,0"
                                                     Command="{Binding OpenCostCenterCategoriesWindowCommand}">
                                                    <!--IsEnabled="{Binding AllowCostCenterCategories}">-->
                                                    <dx:SimpleButton.Glyph>
                                                        <dx:SvgImageSource Uri="/Images/light/Cog.svg" Size="14,14" />
                                                    </dx:SimpleButton.Glyph>
                                                </dx:SimpleButton>
                                            </Grid>
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Beschreibung" FontFamily="Tahoma">
                                            <dxe:TextEdit TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                              AcceptsReturn="True" VerticalContentAlignment="Top"
                                              Text="{Binding SelectedCostCenter.Description}" Height="150"
                                              FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutControl>
                        </Grid>

                        <accounting:FixedCostAllocationControl Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" />
                    </Grid>
                </Grid>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Budget">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.ColumnSpan="2" Content="Budgetverteilung" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />

                        <Label Grid.Column="1" Grid.Row="1" Content="Soll" FontFamily="Tahoma" Foreground="#3f729b" HorizontalContentAlignment="Center" />
                        <Label Grid.Column="2" Grid.Row="1" Content="Ist" FontFamily="Tahoma" Foreground="#3f729b" HorizontalContentAlignment="Center" />

                        <Label Grid.Row="2" Content="1. Quartal" FontFamily="Tahoma" Foreground="#3f729b" Margin="0,3,0,3" FontWeight="Bold" />
                        <dxe:TextEdit Grid.Row="2" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="2" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="3" Content="Januar" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="3" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.January, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="3" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="4" Content="Februar" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="4" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.February, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="4" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="5" Content="März" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="5" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.March, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="5" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="7" Content="2. Quartal" FontFamily="Tahoma" Foreground="#3f729b" Margin="0,3,0,3" FontWeight="Bold" />
                        <dxe:TextEdit Grid.Row="7" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="7" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="8" Content="April" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="8" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.April, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="8" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="9" Content="Mai" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="9" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.May, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="9" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="10" Content="Juni" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="10" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.June, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="10" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="12" Content="3. Quartal" FontFamily="Tahoma" Foreground="#3f729b" Margin="0,3,0,3" FontWeight="Bold" />
                        <dxe:TextEdit Grid.Row="12" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="12" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="13" Content="Juli" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="13" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.July, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="13" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="14" Content="August" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="14" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.August, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="14" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="15" Content="September" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="15" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.September, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="15" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="17" Content="4. Quartal" FontFamily="Tahoma" Foreground="#3f729b" Margin="0,3,0,3" FontWeight="Bold" />
                        <dxe:TextEdit Grid.Row="17" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="17" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="18" Content="Oktober" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="18" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.October, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="18" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="19" Content="November" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="19" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.November, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="19" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Grid.Row="20" Content="Dezember" FontFamily="Tahoma" Foreground="#3f729b" Margin="30,3,0,3" />
                        <dxe:TextEdit Grid.Row="20" Grid.Column="1" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.December, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:TextEdit Grid.Row="22" Grid.Column="2" BorderBrush="Transparent" IsEnabled="False" Height="25" HorizontalContentAlignment="Right" Padding="3,0" Mask="C" MaskType="Numeric" DisplayFormatString="C2" MaskShowPlaceHolders="False" MaskUseAsDisplayFormat="True" Text="{Binding SelectedCostCenter.CostCenterBudget.Quarter1, ConverterCulture='de-DE', StringFormat='C2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


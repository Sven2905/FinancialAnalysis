<UserControl x:Class="FinancialAnalysis.UserControls.CostCenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:ViewModels="clr-namespace:FinancialAnalysis.Logic.ViewModels;assembly=FinancialAnalysis.Logic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:local="clr-namespace:FinancialAnalysis.UserControls"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:models="clr-namespace:FinancialAnalysis.Models;assembly=FinancialAnalysis.Models"
             dx:ThemeManager.Theme="Office2016WhiteSE"
             xmlns:accounting="clr-namespace:FinancialAnalysis.UserControls.Accounting"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1900">
    <UserControl.DataContext>
        <ViewModels:CostCenterViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="labelStyle" TargetType="{x:Type dxlc:LayoutItemLabel}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <Style x:Key="itemStyle" TargetType="{x:Type dxlc:LayoutItem}">
            <Setter Property="LabelPosition" Value="Top" />
            <Setter Property="LabelStyle" Value="{StaticResource labelStyle}" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <local:NullToIsEnabledConverter x:Key="NullConverter" />
    </UserControl.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <dxwui:PageAdornerControl Header="Kostenstellen" Grid.ColumnSpan="3" Foreground="#3f729b" FontFamily="Tahoma">
            <dxwui:PageAdornerControl.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{Binding}" />
                    </Grid>
                </DataTemplate>
            </dxwui:PageAdornerControl.HeaderTemplate>
        </dxwui:PageAdornerControl>

        <dx:DXTabControl Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,0,10">
            <dx:DXTabItem Header="Kostenstellen">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Content="Verfügbare Kostenstellen" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />
                    <Label Grid.Column="2" Content="Informationen" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />
                    <Label Grid.Column="4" Content="Kostenstellenverteilung" FontSize="24" FontFamily="Tahoma" Foreground="#3f729b" Margin="10" HorizontalAlignment="Center" />

                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dxlc:LayoutControl Grid.Row="0" Orientation="Vertical" ItemStyle="{StaticResource itemStyle}" 
                                ItemSpace="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Stretch" >
                                    <dxlc:LayoutGroup.Header>
                                        <TextBlock Text="Filter" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Filtertext" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutControl>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Top" Margin="12,0,12,0">
                                <dxg:TreeListControl ItemsSource="{Binding CostCenterCategoriesFlatStructure}" Height="600" MinWidth="300" 
                          x:Name="Users" BorderThickness="1" BorderBrush="DarkGray" FontSize="14">
                                    <dxg:TreeListColumn FieldName="CostCenterCategory.Name" Header="Kategorie" Width="150" />
                                    <dxg:TreeListColumn FieldName="CostCenter.Name" Header="Kostenstelle" Width="330" />
                                    <dxg:TreeListControl.View>
                                        <dxg:TreeListView KeyFieldName="Id" ParentFieldName="ParentId" AutoWidth="True" ShowHorizontalLines="True" ShowVerticalLines="False" ShowSelectionRectangle="False"
                                                          AllowSorting="False" AllowBandMultiRow="False" VerticalScrollbarVisibility="Auto" AllowColumnFiltering="False" 
                                                          AllowEditing="False" UseLegacyFilterEditor="False" EnableSelectedRowAppearance="True" UseEvenRowBackground="True" ShowIndicator="False" />
                                    </dxg:TreeListControl.View>
                                </dxg:TreeListControl>
                            </ScrollViewer>
                        </Grid>

                        <VirtualizingStackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <dx:SimpleButton Width="120" Height="30" Margin="0,0,5,0" Content="Neu"
                                 Foreground="#3F729B" Command="{Binding NewCostCenterCommand}" FontFamily="Tahoma" />
                            <dx:SimpleButton Width="120" Height="30" Margin="5,0,5,0" Content="Speichern" Foreground="#3F729B"
                                 Command="{Binding SaveCostCenterCommand}" FontFamily="Tahoma" />
                            <dx:SimpleButton Width="120" Height="30" Margin="5,0,5,0" Content="Löschen" Foreground="#3F729B"
                                 Command="{Binding DeleteCostCenterCommand}" FontFamily="Tahoma" />
                        </VirtualizingStackPanel>

                        <Grid Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <dxlc:LayoutControl Orientation="Vertical" ItemStyle="{StaticResource itemStyle}" ItemSpace="10" 
                                    IsEnabled="{Binding SelectedCostCenterCategoryFlatStructure, Converter={StaticResource NullConverter}}">
                                <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Left" Width="500">
                                    <dxlc:LayoutGroup.Header>
                                        <TextBlock Text="Informationen" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Kostenstelle-ID" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding SelectedCostCenterCategoryFlatStructure.CostCenter.Identifier}" FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Name" FontFamily="Tahoma">
                                            <dxe:TextEdit Text="{Binding SelectedCostCenterCategoryFlatStructure.CostCenter.Name}" FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Kategorie" FontFamily="Tahoma">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <dxe:ComboBoxEdit NullText="Bitte wählen" ValueMember="CostCenterCategoryId"
                                                      DisplayMember="Name" ItemsSource="{Binding CostCenterCategories}"
                                                      EditValue="{Binding SelectedCostCenterCategoryFlatStructure.CostCenter.RefCostCenterCategoryId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      FontFamily="Tahoma" />
                                                <dx:SimpleButton Grid.Column="1" Width="30" Margin="5,0,0,0"
                                                     Command="{Binding OpenCostCenterCategoriesWindowCommand}">
                                                    <!--IsEnabled="{Binding AllowCostCenterCategories}">-->
                                                    <dx:SimpleButton.Glyph>
                                                        <dx:SvgImageSource Uri="/Images/light/Cog.svg" Size="14,14" />
                                                    </dx:SimpleButton.Glyph>
                                                </dx:SimpleButton>
                                            </Grid>
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Typ" FontFamily="Tahoma">
                                            <dxe:ComboBoxEdit ItemsSource="{dxe:EnumItemsSource EnumType={x:Type models:CostCenterType}, SplitNames=True}"
                                                EditValue="{Binding SelectedCostCenter.CostCenterType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutItem Label="Beschreibung" FontFamily="Tahoma">
                                            <dxe:TextEdit TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                              AcceptsReturn="True" VerticalContentAlignment="Top"
                                              Text="{Binding SelectedCostCenterCategoryFlatStructure.CostCenter.Description}" Height="150"
                                              FontFamily="Tahoma" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutControl>

                        </Grid>

                        <accounting:FixedCostAllocationControl Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" />


                    </Grid>
                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>
    </Grid>
</UserControl>
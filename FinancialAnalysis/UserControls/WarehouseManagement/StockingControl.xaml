<UserControl x:Class="FinancialAnalysis.UserControls.StockingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:ViewModels="clr-namespace:FinancialAnalysis.Logic.ViewModels;assembly=FinancialAnalysis.Logic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:local="clr-namespace:FinancialAnalysis.UserControls"
             xmlns:WarehouseModel="clr-namespace:FinancialAnalysis.Models.WarehouseManagement;assembly=FinancialAnalysis.Models"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             dx:ThemeManager.ThemeName="Office2016WhiteSE"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1900">
    <UserControl.DataContext>
        <ViewModels:StockingViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="labelStyle" TargetType="{x:Type dxlc:LayoutItemLabel}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <Style x:Key="itemStyle" TargetType="{x:Type dxlc:LayoutItem}">
            <Setter Property="LabelPosition" Value="Top" />
            <Setter Property="LabelStyle" Value="{StaticResource labelStyle}" />
            <Setter Property="Foreground" Value="#3f729b" />
        </Style>
        <local:NullToVisConverter x:Key="NullToVisConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dxwui:PageAdornerControl Header="Lagerung" Grid.ColumnSpan="3" Foreground="#3f729b" FontFamily="Tahoma">
            <dxwui:PageAdornerControl.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{Binding}" />
                    </Grid>
                </DataTemplate>
            </dxwui:PageAdornerControl.HeaderTemplate>
        </dxwui:PageAdornerControl>

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <dx:DXTabControl Margin="0,50,0,10">
                <dx:DXTabItem Header="Einlagern">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0" Margin="10" Content="Kriterien: " FontFamily="Tahoma" Foreground="#3F729B" FontSize="20" />

                        <dxlc:LayoutControl Grid.Column="0" Grid.Row="1" Orientation="Vertical" ItemStyle="{StaticResource itemStyle}"
                                        ItemSpace="10" VerticalAlignment="Top" Margin="0,0,0,0" Grid.RowSpan="2">
                            <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Left" Width="400">
                                <dxlc:LayoutGroup.Header>
                                    <TextBlock Text="Informationen" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                </dxlc:LayoutGroup.Header>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Lager" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                      ItemsSource="{Binding Warehouses}"
                                                      DisplayMember="Name"
                                                      EditValue="{Binding SelectedWarehouse, UpdateSourceTrigger=PropertyChanged}"
                                                      Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Lagerplatz" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                          ItemsSource="{Binding SelectedWarehouse.Stockyards}"
                                                          DisplayMember="Name"
                                                          EditValue="{Binding SelectedStockyard, UpdateSourceTrigger=PropertyChanged}"
                                                          Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Produkt" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                          ItemsSource="{Binding Products}"
                                                          DisplayMember="Name"
                                                          EditValue="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}"
                                                          Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Menge" FontFamily="Tahoma">
                                        <dxe:TextEdit Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" FontFamily="Tahoma" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dx:SimpleButton Width="150" Height="30" Margin="5,10,5,0" Content="Einlagern"
                                             HorizontalAlignment="Left"
                                             Foreground="#3F729B" Command="{Binding StoreCommand}"
                                             FontFamily="Tahoma" />
                            </dxlc:LayoutGroup>
                        </dxlc:LayoutControl>

                        <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="10" Visibility="{Binding SelectedStockyard, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullToVisConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Lagerplatzbestand: " FontFamily="Tahoma" Foreground="#3F729B" FontSize="20" />

                            <dxg:GridControl Grid.Row="1" Grid.Column="0" Margin="0,20,0,0" HorizontalAlignment="Left" ShowBorder="False" ItemsSource="{Binding SelectedStockyard.StockedProducts}" MaxWidth="500" MaxHeight="2000">
                                <dxg:GridColumn FieldName="Product.ItemNumber" Header="Artikelnummer" Width="50" />
                                <dxg:GridColumn FieldName="Product.Name" Header="Name" Width="112" />
                                <dxg:GridColumn FieldName="Quantity" Header="Menge" Width="30" />
                                <dxg:GridControl.View>
                                    <dxg:TableView ShowHorizontalLines="False" ShowVerticalLines="False" ShowSelectionRectangle="False" AutoWidth="True" AllowBandMultiRow="False" VerticalScrollbarVisibility="Auto"
                                                   ShowGroupPanel="False" AllowColumnFiltering="False" AllowEditing="False" UseLegacyFilterEditor="False" EnableSelectedRowAppearance="False" UseEvenRowBackground="True" ShowIndicator="False" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </Grid>
                        <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Margin="10"
                                      Visibility="{Binding FilteredWarehousesFlatStructure, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullToVisConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="2" Grid.Row="0" Content="Lagerplätze diesem Produkt: " FontFamily="Tahoma" Foreground="#3F729B" FontSize="20" />

                            <dxg:TreeListControl  Grid.Column="2" Grid.Row="1" Margin="0,20,0,0" HorizontalAlignment="Left" ShowBorder="False" ItemsSource="{Binding FilteredWarehousesFlatStructure}" MaxWidth="500" MaxHeight="2000">
                                <dxg:TreeListColumn FieldName="Warehouse.Name" Header="Lager" Width="50" />
                                <dxg:TreeListColumn FieldName="Stockyard.Name" Header="Lagerplatz" Width="112" />
                                <dxg:TreeListColumn FieldName="Quantity" Header="Menge" Width="30" />
                                <dxg:TreeListControl.View>
                                    <dxg:TreeListView KeyFieldName="Id" ParentFieldName="ParentId" ShowHorizontalLines="False" ShowVerticalLines="False" ShowSelectionRectangle="False"
                                                      AutoWidth="True" AllowBandMultiRow="False" VerticalScrollbarVisibility="Auto" AllowColumnFiltering="False" AllowEditing="False" UseLegacyFilterEditor="False"
                                                      EnableSelectedRowAppearance="False" UseEvenRowBackground="True" ShowIndicator="False" />
                                </dxg:TreeListControl.View>
                            </dxg:TreeListControl>
                        </Grid>
                    </Grid>
                </dx:DXTabItem>
                <dx:DXTabItem Header="Auslagern">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <dxlc:LayoutControl Orientation="Vertical" ItemStyle="{StaticResource itemStyle}"
                                        ItemSpace="10" VerticalAlignment="Top">
                            <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" HorizontalAlignment="Left" Width="400">
                                <dxlc:LayoutGroup.Header>
                                    <TextBlock Text="Informationen" Foreground="#3f729b" FontWeight="Bold" FontFamily="Tahoma" />
                                </dxlc:LayoutGroup.Header>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Produkt" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                          ItemsSource="{Binding Products}"
                                                          DisplayMember="Name"
                                                          EditValue="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}"
                                                          Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Lager" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                      ItemsSource="{Binding FilteredWarehouses}"
                                                      DisplayMember="Name"
                                                      EditValue="{Binding SelectedWarehouseTakeOut, UpdateSourceTrigger=PropertyChanged}"
                                                      Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Lagerplatz" FontFamily="Tahoma">
                                        <dxe:ComboBoxEdit Margin="0,3,0,3"
                                                          ItemsSource="{Binding SelectedWarehouseTakeOut.Stockyards}"
                                                          DisplayMember="Name"
                                                          EditValue="{Binding SelectedStockyardTakeOut, UpdateSourceTrigger=PropertyChanged}"
                                                          Foreground="#3F729B" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Menge" FontFamily="Tahoma">
                                        <dxe:SpinEdit Text="{Binding QuantityTakeOut, UpdateSourceTrigger=PropertyChanged}" Mask="d" MinValue="0" MaxValue="{Binding MaxValue}" FontFamily="Tahoma" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem Label="Max. Menge" FontFamily="Tahoma">
                                        <dxe:TextEdit Text="{Binding MaxValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Tahoma" IsReadOnly="True" IsEnabled="False" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                                <dx:SimpleButton Width="150" Height="30" Margin="5,10,5,0" Content="Auslagern"
                                             HorizontalAlignment="Left"
                                             Foreground="#3F729B" Command="{Binding TakeOutCommand}"
                                             FontFamily="Tahoma" />
                            </dxlc:LayoutGroup>
                        </dxlc:LayoutControl>
                    </Grid>
                </dx:DXTabItem>
            </dx:DXTabControl>
        </Grid>
    </Grid>
</UserControl>